{% extends 'admin/layout.html.twig' %}

{% block title %}Products{% endblock %}

{% block content %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Products
                <small>shop catalog</small>
            </h1>
        </section>

        <section class="content">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Products List</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <a href="{{ path('admin_products_create') }}" class="btn btn-success">Add Product</a>
                    </div>
                    <table id="admin_data_table" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in products %}
                            <tr>
                                <td>{{ product.id }}</td>
                                <td>{{ product.title }}</td>
                                <td>{{ product.category ? product.category.title : 'No category' }}</td>
                                <td>
                                    <img src="{{ product.getImage('preview_picture') }}" alt="" width="100">
                                </td>
                                <td>
                                    <a href="{{ path('admin_products_edit', {id: product.id}) }}">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <form method="POST" action="{{ path('admin_products_delete', {id: product.id}) }}"
                                          style="display: inline;">
                                        <input type="hidden" name="_token"
                                               value="{{ csrf_token('delete' ~ product.id) }}">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button onclick="return confirm('Are you sure?')" type="submit" class="delete"
                                                style="background:none;border:none;color:#337ab7;cursor:pointer;">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
