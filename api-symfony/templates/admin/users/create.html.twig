{% extends 'admin/layout.html.twig' %}

{% block title %}Create User{% endblock %}

{% block content %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Add User
                <small>create a new user</small>
            </h1>
        </section>

        <section class="content">
            <form action="{{ path('admin_users_store') }}" method="POST">
                <input type="hidden" name="_token" value="{{ csrf_token('user_create') }}">

                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create User</h3>
                    </div>
                    <div class="box-body">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control" id="name" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="text" name="email" class="form-control" id="email" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" name="password" class="form-control" id="password"
                                       placeholder="">
                            </div>
                            <div class="form-group">
                                <label>
                                    <input type="checkbox" class="minimal" name="isAdmin">
                                </label>
                                <label>Admin</label>
                            </div>
                            <div class="form-group">
                                <label>
                                    <input type="checkbox" class="minimal" name="status" checked>
                                </label>
                                <label>Active</label>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <a href="{{ path('admin_users_index') }}" class="btn btn-default">Back</a>
                        <button class="btn btn-success pull-right">Add</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
{% endblock %}
