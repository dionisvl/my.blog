{% extends 'admin/layout.html.twig' %}

{% block title %}Edit Order{% endblock %}

{% block content %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Edit Order
            </h1>
        </section>

        <section class="content">
            <form method="POST" action="{{ path('admin_orders_update', {id: order.id}) }}">
                <input type="hidden" name="_token" value="{{ csrf_token('order_form') }}">
                <input type="hidden" name="_method" value="PUT">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Update Order</h3>
                    </div>
                    <div class="box-body">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" id="title" name="title"
                                       value="{{ order.title }}">

                                <label for="slug">Slug</label>
                                <input type="text" class="form-control" id="slug" name="slug" value="{{ order.slug }}">

                                <label for="price">Price</label>
                                <input type="number" name="price" id="price" class="form-control"
                                       value="{{ order.price }}">

                                <label for="phone">Phone</label>
                                <input type="tel" class="form-control" id="phone" name="phone"
                                       value="{{ order.phone }}">

                                <label for="address">Address</label>
                                <input type="text" class="form-control" id="address" name="address"
                                       value="{{ order.address }}">

                                <label for="notes">Notes</label>
                                <textarea name="notes" id="notes" cols="30" rows="4"
                                          class="form-control">{{ order.notes }}</textarea>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="contents">Contents</label>
                                <textarea name="contents" id="contents" cols="30" rows="4"
                                          class="form-control">{{ order.contents }}</textarea>

                                <label for="contents_json">Contents JSON</label>
                                <textarea name="contents_json" id="contents_json" cols="30" rows="4"
                                          class="form-control">{{ order.contentsJson }}</textarea>

                                <label for="manager">Manager</label>
                                <input type="text" class="form-control" id="manager" name="manager"
                                       value="{{ order.manager }}">

                                <label for="status">Order Status</label>
                                <input type="number" name="status" id="status" class="form-control"
                                       value="{{ order.status }}">
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button class="btn btn-warning pull-right">Update Order</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
{% endblock %}
