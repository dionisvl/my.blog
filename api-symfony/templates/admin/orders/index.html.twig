{% extends 'admin/layout.html.twig' %}

{% block title %}Orders{% endblock %}

{% block content %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Orders
                <small>shop orders</small>
            </h1>
        </section>

        <section class="content">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Orders List</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <a href="{{ path('admin_orders_create') }}" class="btn btn-success">Add Order</a>
                    </div>
                    <table id="admin_data_table" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Slug</th>
                            <th>Contents</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for order in orders %}
                            <tr>
                                <td>{{ order.id }}</td>
                                <td>{{ order.title }}</td>
                                <td>{{ order.slug }}</td>
                                <td>{{ order.contents }}</td>
                                <td>{{ order.price }}</td>
                                <td>
                                    <a href="{{ path('admin_orders_edit', {id: order.id}) }}"><i
                                            class="fas fa-pencil-alt"></i></a>
                                    <form method="POST" action="{{ path('admin_orders_delete', {id: order.id}) }}"
                                          style="display: inline;">
                                        <input type="hidden" name="_token"
                                               value="{{ csrf_token('delete' ~ order.id) }}">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button onclick="return confirm('Are you sure?')" type="submit" class="delete"
                                                style="background:none;border:none;color:#337ab7;cursor:pointer;">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="box-body">
                    <a href="{{ path('admin_orders_download') }}"><i class="fas fa-file-excel"></i> Download Excel</a>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
