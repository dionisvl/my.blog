{% extends 'admin/layout.html.twig' %}

{% block title %}Add Order{% endblock %}

{% block content %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Add Order
            </h1>
        </section>

        <section class="content">
            <form method="POST" action="{{ path('admin_orders_store') }}">
                <input type="hidden" name="_token" value="{{ csrf_token('order_form') }}">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create Order</h3>
                    </div>
                    <div class="box-body">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" id="title" name="title" value="">

                                <label for="price">Price</label>
                                <input type="number" name="price" id="price" class="form-control" value="1990">

                                <label for="phone">Phone</label>
                                <input type="tel" class="form-control" id="phone" name="phone" value="">

                                <label for="address">Address</label>
                                <input type="text" class="form-control" id="address" name="address" value="">

                                <label for="notes">Notes</label>
                                <textarea name="notes" id="notes" cols="30" rows="4" class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="contents">Contents</label>
                                <textarea name="contents" id="contents" cols="30" rows="4"
                                          class="form-control"></textarea>

                                <label for="contents_json">Contents JSON</label>
                                <textarea name="contents_json" id="contents_json" cols="30" rows="4"
                                          class="form-control"></textarea>

                                <label for="manager">Manager</label>
                                <input type="text" class="form-control" id="manager" name="manager" value="">

                                <label for="status">Order Status</label>
                                <input type="number" name="status" id="status" class="form-control" value="0">
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <a href="{{ path('admin_orders_index') }}" class="btn btn-default">Back</a>
                        <button class="btn btn-success pull-right">Add Order</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
{% endblock %}
