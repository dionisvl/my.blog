{% extends 'admin/layout.html.twig' %}

{% block title %}Front Parts{% endblock %}

{% block content %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>Front Parts</h1>
        </section>

        <section class="content">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">All Components</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <a href="{{ path('admin_frontparts_create') }}" class="btn btn-success">Add</a>
                    </div>
                    <table id="admin_data_table" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Slug</th>
                            <th>Status</th>
                            <th>Category</th>
                            <th>Type</th>
                            <th>Preview</th>
                            <th>Content</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for frontpart in frontparts %}
                            <tr>
                                <td>{{ frontpart.id }}</td>
                                <td>{{ frontpart.title }}</td>
                                <td>{{ frontpart.slug }}</td>
                                <td>{{ frontpart.status }}</td>
                                <td>{{ frontpart.categoryName }}</td>
                                <td>{{ frontpart.type }}</td>
                                <td>{{ frontpart.previewText }}</td>
                                <td>{{ frontpart.detailText }}</td>
                                <td>
                                    <a href="{{ path('admin_frontparts_edit', {id: frontpart.id}) }}">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <form method="POST"
                                          action="{{ path('admin_frontparts_delete', {id: frontpart.id}) }}"
                                          style="display: inline;">
                                        <input type="hidden" name="_token"
                                               value="{{ csrf_token('delete' ~ frontpart.id) }}">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button onclick="return confirm('Are you sure?')" type="submit" class="delete"
                                                style="background:none;border:none;color:#337ab7;cursor:pointer;">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
