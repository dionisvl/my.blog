{
    frankenphp {
        php_ini memory_limit 256M
        max_threads auto
    }

    order php_server before file_server
}

:80 {
    root * /app/public
    encode zstd gzip

    # Canonical redirects for migration and SEO (served as explicit 301)
    @old_domain host phpqa.ru www.phpqa.ru
    redir @old_domain https://web3main.pro{uri} 301

    @www_new_domain host www.web3main.pro
    redir @www_new_domain https://web3main.pro{uri} 301

    # Traefik terminates TLS and forwards X-Forwarded-Proto to Caddy.
    @new_domain_http {
        host web3main.pro
        header X-Forwarded-Proto http
    }
    redir @new_domain_http https://web3main.pro{uri} 301

    @health path /health

    # Cache-Control for static assets (1 year, immutable)
    @static {
        path *.css *.js *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    # Cache-Control for images (30 days)
    @images {
        path *.jpg *.jpeg *.png *.gif *.webp *.avif *.svg *.ico
    }
    header @images Cache-Control "public, max-age=2592000"

    log {
        format json {
            time_format iso8601
        }
        level info
        output stdout
    }

    log_skip @health

    php_server {
        worker {
            file /app/public/index.php
            num 3
        }
    }
}
