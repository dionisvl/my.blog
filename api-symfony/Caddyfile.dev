{
    frankenphp {
        php_ini memory_limit 256M
        max_threads auto
    }

    order php_server before file_server
}

:80 {
    root * /app/public
    encode zstd gzip

    log {
        format json {
            time_format iso8601
        }
        level debug
        output stdout
        skip_paths /health
    }

    php_server
}
