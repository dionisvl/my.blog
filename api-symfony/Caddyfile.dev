{
    frankenphp {
        php_ini memory_limit 256M
        max_threads auto
    }

    order php_server before file_server
}

:80 {
    root * /app/public
    encode zstd gzip

    @health path /health

    # Cache-Control for static assets (1 year, immutable)
    @static {
        path *.css *.js *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    # Cache-Control for images (30 days)
    @images {
        path *.jpg *.jpeg *.png *.gif *.webp *.avif *.svg *.ico
    }
    header @images Cache-Control "public, max-age=2592000"

    log {
        format json {
            time_format iso8601
        }
        level debug
        output stdout
    }

    log_skip @health

    php_server
}
