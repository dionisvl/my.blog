{
    frankenphp
}

:80 {
    root * /app/public

    encode zstd br gzip

    php_server

    header {
               -Permissions-Policy
               X-Content-Type-Options "nosniff"
               X-Frame-Options "SAMEORIGIN"
               Referrer-Policy "no-referrer-when-downgrade"
           }

    log {
            output stdout
            format console
            level INFO
        }
}
